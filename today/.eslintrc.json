{
    "extends": ["airbnb", "plugin:redux-saga/recommended"],
    "parser": "babel-eslint",
    "plugins": ["react", "jsx-a11y", "import", "redux-saga", "react-native"],

    "rules": {
        "dot-notation": "off",
        "eol-last": "off",
        "func-names": "off",
        "import/named": 2,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "jsx-a11y/href-no-hash": "off",
        "max-len": [
            1,
            80,
            2,
            {
                "ignoreComments": true
            }
        ],
        "no-bitwise": [
            "error",
            {
                "allow": ["~"]
            }
        ],
        "no-param-reassign": [
            "error",
            {
                "props": false
            }
        ],
        "no-console": "off",
        "no-extra-boolean-cast": 2,
        "no-unused-expressions": "off",
        "padded-blocks": [
            "error",
            {
                "switches": "never"
            }
        ],
        "semi": ["error", "never"],
        "react/prefer-stateless-function": [0, {}],
        "react/prop-types": [
            1,
            {
                "ignore": ["t"]
            }
        ],
        "react/jsx-indent": [1, 4],
        "react/jsx-indent-props": [1, 2],
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react-native/no-unused-styles": 2,
        "react-native/split-platform-components": 2,
        "react-native/no-inline-styles": 2,
        "react-native/no-color-literals": 2
    },
    "settings": {
        "import/resolver": {
            "babel-module": {}
        }
    },
    "globals": {
        "$": false,
        "window": false
    },
    "env": {
        "browser": true,
        "es6": true
    }
}
